# Переменные окружения для AI Агента с Мета-Познанием
# Скопируйте этот файл в .env и укажите реальные значения

# Режим работы
ENVIRONMENT=development
LOG_LEVEL=INFO

# Настройки базы данных (PostgreSQL)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=ai_agent
# POSTGRES_USER=ai_agent
# POSTGRES_PASSWORD=your_password

# Настройки Redis
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=your_redis_password

# API ключи для AI сервисов (укажите только если используете)
# OPENAI_API_KEY=your_openai_api_key
# OPENAI_ORGANIZATION=your_openai_organization
# GOOGLE_AI_API_KEY=your_google_ai_api_key

# API ключи для векторных баз данных
# PINECONE_API_KEY=your_pinecone_api_key
# PINECONE_ENVIRONMENT=your_pinecone_environment

# API ключи для внешних сервисов
# SCRAPER_API_KEY=your_scraper_api_key
# SERPER_API_KEY=your_serper_api_key

# Настройки безопасности
# SECRET_KEY=your_secret_key_here_generate_strong_one
# JWT_SECRET_KEY=your_jwt_secret_key_here_generate_strong_one
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Настройки API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Настройки CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Настройки файлового хранилища
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=["pdf", "txt", "md", "json", "yaml", "yml"]

# Настройки кэширования
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Настройки обучения
LEARNING_BATCH_SIZE=32
LEARNING_EPOCHS=100
LEARNING_LEARNING_RATE=0.001

# Настройки мониторинга
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Настройки разработки
DEBUG=true
DEVELOPMENT_MODE=true
ENABLE_SWAGGER=true
ENABLE_GRAPHIQL=true

# Флаги функций
ENABLE_LEARNING=true
ENABLE_MEMORY=true
ENABLE_SELF_AWARENESS=true
ENABLE_ADAPTATION=true
ENABLE_ANALYTICS=true
ENABLE_WEB_RESEARCH=true

# Настройки резервного копирования
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=./backups

# Настройки ограничения частоты запросов
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Настройки агента
AGENT_MAX_EXECUTION_TIME=30.0
AGENT_CONFIDENCE_THRESHOLD=0.5
AGENT_ENABLE_REASONING_TRACE=true
AGENT_ENABLE_MEMORY=true
AGENT_MAX_MEMORY_ENTRIES=1000
AGENT_TOOL_TIMEOUT=10.0
