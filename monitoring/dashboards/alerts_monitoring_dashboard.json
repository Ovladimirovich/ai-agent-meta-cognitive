{
  "dashboard": {
    "id": null,
    "title": "Alerts Monitoring Dashboard",
    "tags": ["alerts", "monitoring", "critical"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Active Alerts Count",
        "type": "stat",
        "targets": [
          {
            "expr": "count(alerts{status=\"firing\"})",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 1}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "title": "Alerts by Severity",
        "type": "graph",
        "targets": [
          {
            "expr": "count(alerts) by (severity)",
            "legendFormat": "{{severity}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0},
        "yAxes": [
          {
            "format": "short",
            "label": "Count"
          }
        ]
      },
      {
        "id": 3,
        "title": "Alerts by Status",
        "type": "graph",
        "targets": [
          {
            "expr": "count(alerts) by (status)",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "yAxes": [
          {
            "format": "short",
            "label": "Count"
          }
        ]
      },
      {
        "id": 4,
        "title": "High Severity Alerts",
        "type": "graph",
        "targets": [
          {
            "expr": "count(alerts{severity=\"critical\"})",
            "legendFormat": "Critical Alerts",
            "refId": "A"
          },
          {
            "expr": "count(alerts{severity=\"high\"})",
            "legendFormat": "High Alerts",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "yAxes": [
          {
            "format": "short",
            "label": "Count"
          }
        ]
      },
      {
        "id": 5,
        "title": "System Health Alerts",
        "type": "graph",
        "targets": [
          {
            "expr": "health_status{check=~\"alert_.*\"}",
            "legendFormat": "{{check}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "yAxes": [
          {
            "format": "short",
            "label": "Health (0=unhealthy, 1=healthy)"
          }
        ]
      },
      {
        "id": 6,
        "title": "CPU Usage Alert",
        "type": "graph",
        "targets": [
          {
            "expr": "system_cpu_percent",
            "legendFormat": "CPU Usage",
            "refId": "A"
          },
          {
            "expr": "90",
            "legendFormat": "CPU Threshold",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16},
        "yAxes": [
          {
            "format": "percent",
            "label": "CPU %"
          }
        ]
      },
      {
        "id": 7,
        "title": "Memory Usage Alert",
        "type": "graph",
        "targets": [
          {
            "expr": "system_memory_percent",
            "legendFormat": "Memory Usage",
            "refId": "A"
          },
          {
            "expr": "90",
            "legendFormat": "Memory Threshold",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 16},
        "yAxes": [
          {
            "format": "percent",
            "label": "Memory %"
          }
        ]
      },
      {
        "id": 8,
        "title": "Cognitive Load Alert",
        "type": "graph",
        "targets": [
          {
            "expr": "cognitive_load_current",
            "legendFormat": "{{component}}",
            "refId": "A"
          },
          {
            "expr": "0.9",
            "legendFormat": "Cognitive Load Threshold",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 16},
        "yAxes": [
          {
            "format": "percentunit",
            "label": "Load"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "refresh": "5s",
    "schemaVersion": 16,
    "version": 0,
    "links": [],
    "gnetId": null
 }
}